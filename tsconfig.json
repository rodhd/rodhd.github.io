{
  "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "outDir": "./built/",
      "sourceMap": true,
      "strict": true,
      "experimentalDecorators": true,
      "baseUrl": ".",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "paths": {
          "@/*": [
              "src/*"
          ]
      },
      "lib": [
          "es5",
          "dom",
          "dom.iterable",
          "scripthost"
      ],
      "types": [
          "vue-meta"
      ]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
  ],
  "exclude": [
      "node_modules"
  ]
}